<Window x:Class="erronkaTPVsistema.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:erronkaTPVsistema"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="" Height="750" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="0.75*"/>
        </Grid.ColumnDefinitions>

        <!-- ezkerreko menuko elementuak zenbak okupatuko duten -->
        <Grid Grid.Column="0" Background="#1A202C" Margin="0,0,5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="TPV Elkartea" 
                       FontSize="28" FontWeight="ExtraBold" Foreground="#68D391" 
                       Margin="10,20" HorizontalAlignment="Center"/>

            <!-- Stackpanel botoiak jartzeko -->
            <StackPanel Grid.Row="1" VerticalAlignment="Top">
                <Button Content="Erreserbak"
                        Click="Button_Reservas_Click"
                        Padding="20"
                        Margin="20"/>

                <Button Content="Kudeaketa"
                        Click="Button_Gestion_Click"
                        Padding="20"
                        Margin="20"/>
            </StackPanel>

            <Button Grid.Row="2" Content="Atera"
                    Background="#E53E3E"
                    Click="Button_Exit_Click"
                    Padding="20"
                    Margin="20"/>

        </Grid>

        <!-- kontenido printzipala hemen(75%) -->
        <Border Grid.Column="1" Background="#3D4B5D" CornerRadius="15" Margin="5" Padding="10">
            <Grid>
                <!-- erreserbak hemen-->
                <Grid x:Name="ReservasView" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- 0: izenburua -->
                        <RowDefinition Height="Auto"/>
                        <!-- 1: data eta janorduak -->
                        <RowDefinition Height="*"/>
                        <!-- 2: Mahaiak -->
                        <RowDefinition Height="Auto"/>
                        <!-- 3: Erreserba botoia -->
                    </Grid.RowDefinitions>

                    <!-- Fila 0: izenburua -->
                    <Label Grid.Row="0" Content="ERRESERBAK" FontSize="36"
                           HorizontalAlignment="Center" Margin="0,20,0,10"
                           FontWeight="Light" Foreground="#CBD5E0" />

                    <!-- Fila 1: data eta janorduak -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">

                        <!-- DatePicker -->
                        <DatePicker x:Name="datePickerReserva"
                                    SelectedDate="{x:Static sys:DateTime.Today}"
                                    DisplayDateStart="{x:Static sys:DateTime.Today}"
                                    DisplayDateEnd="{Binding hogeiFromNow}"
                                    Width="220"
                                    FontSize="16"
                                    Height="40"
                                    VerticalAlignment="Center"
                                    SelectedDateChanged="datePickerReserva_SelectedDateChanged"/>

                        <!-- Radio Buttons -->
                        <RadioButton x:Name="radio_bazkaria" Content="Bazkaria" FontSize="18" Foreground="#E2E8F0" Margin="20" Checked="radio_bazkaria_Checked"/>
                        <RadioButton x:Name="radio_afaria" Content="Afaria" FontSize="18" Foreground="#E2E8F0" Margin="20" Checked="radio_afaria_Checked"/>
                    </StackPanel>

                    <!-- Fila 2: mahaiak -->
                    <Border Grid.Row="2" Background="#4A5568" CornerRadius="8" Margin="10">
                        <Grid x:Name="gridaMahaiena" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </Border>

                    <!-- Fila 3: erreserba botoia -->
                    <Grid Grid.Row="3" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btn_erreserbatu" Grid.Column="0" Content="Erreserbatu" Height="45"
                                Background="#38A169" HorizontalAlignment="Left" Width="200" Margin="500,0,0,0" VerticalAlignment="Top" Click="btn_erreserbatu_Click"/>
                    </Grid>
                </Grid>
                
                <!-- kudeaketa-->
                <Grid x:Name="GestionView" Visibility="Visible" Margin="10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">

                        <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                            <Label Content="Mahaia:" FontSize="10" Foreground="#E2E8F0" FontWeight="SemiBold" Padding="0,0,0,3"/>
                            <ComboBox x:Name="mahaia_combo" Width="150"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                            <Label Content="Erabiltzailea:" FontSize="10" Foreground="#E2E8F0" FontWeight="SemiBold" Padding="0,0,0,3"/>
                            <TextBlock x:Name="txt_erabiltzailea" VerticalAlignment="Center" Width="200" Padding="5" Background="#F0F0F0"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                            <Label Content="Janordua:" FontSize="10" Foreground="#E2E8F0" FontWeight="SemiBold" Padding="0,0,0,3"/>
                            <ComboBox x:Name="janordua_combo" Width="150" />
                        </StackPanel>

                    </StackPanel>

                    <Grid Grid.Row="1" Margin="10,0,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="60,0,0,15" HorizontalAlignment="Left">

                            <Label Content="Kontua:" FontWeight="Bold" Foreground="#E2E8F0" Margin="0,0,0,20">
                            </Label>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Vertical" >
                                    <Label Content="Kategoria" Margin="0,-25,0,0" Foreground="#E2E8F0" HorizontalAlignment="Center"/>
                                    <ComboBox x:Name="kategoriak_combo" Margin="0,0,10,0" SelectionChanged="kategoriak_combo_SelectionChanged">
                                        <StackPanel/>
                                    </ComboBox>
                                    <Button Content="Erantsi" Margin="0,10,10,0" Click="erantsi_Click" />
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <Label Content="Produktua" Margin="0,-25,0,0" Foreground="#E2E8F0" HorizontalAlignment="Center"/>
                                    <ComboBox x:Name="produktuak_combo" Margin="0,0,10,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Orientation="Vertical">
                                    <Label Content="Kantitatea" Margin="0,-25,0,0" Foreground="#E2E8F0" HorizontalAlignment="Center"/>
                                    <TextBox x:Name="kantitatea_txt" TextAlignment="Center" PreviewTextInput="kantitatea_txt_PreviewTextInput"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="10,0,10,10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="EskaeraDataGrid" Grid.Row="0" ItemsSource="{Binding TiketarenProduktuak}" AutoGenerateColumns="False" Margin="0, 10, 0, 10" IsReadOnly="True" SelectionMode="Single">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Produktua" Binding="{Binding Izena}" 
                                    Width="2*"/>
                                        <DataGridTextColumn Header="Kantitatea" Binding="{Binding HautatutakoKantitatea}" Width="*"/>
                                        <DataGridTextColumn Header="Prezioa" Binding="{Binding Prezioa, StringFormat='C2'}" Width="*"/>

                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom">

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Label Content="Kontu totala:" FontWeight="Bold" Foreground="#E2E8F0">
                                        </Label>
                                        <TextBox x:Name="kontu_totala_txt" Text="{Binding KontuTotala, StringFormat='C2'}"  Width="150" IsReadOnly="True" TextAlignment="Right" FontWeight="Bold"/>
                                    </StackPanel>

                                    <Button Content="Tiketa inprimatu" Margin="0,10,0,0"/>
                                </StackPanel>

                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
