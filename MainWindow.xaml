<Window x:Class="erronkaTPVsistema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TPV - Inicio de sesión"
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF2C2C2C"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="TPV SISTEMA"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,40"/>

        <!-- Formulario de login -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <TextBlock Text="ERABILTZAILEA:" Foreground="White" FontSize="14"/>
            <TextBox x:Name="txtUsuario" Margin="0,5,0,15" Height="30" FontSize="14"/>

            <TextBlock Text="PASAGITZA:" Foreground="White" FontSize="14"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,25" Height="30" FontSize="14"/>

            <Button x:Name="btnLogin" Content="SAIOA HASI" 
                    Background="#FF00A86B" Foreground="White"
                    FontWeight="Bold" Height="40" 
                    Click="btnLogin_Click"/>
        </StackPanel>

        <!-- Pie de ventana -->
        <TextBlock x:Name="txt_erroreak" Grid.Row="2" Text="" 
                   HorizontalAlignment="Center" 
                   FontSize="12" Foreground="PaleVioletRed" Margin="0,20,0,0"/>
    </Grid>
</Window>
